<div class="container">
  <h2>Edit Book</h2>

  <form method="POST" action="/books/<%= @book.id %>">
  <input type="hidden" value="patch" name="_method">
    <div class="form-group">
      <label for="exampleInput">New Title</label>
      <input type="text" value="<%= @book.title %>" name="name" class="form-control" id="exampleInputName" placeholder="Enter Title">
      <small id="nameHelp" class="form-text text-muted">Get it right this time.</small>
    </div>
    <div class="form-group">
      <label for="exampleInput">Genre</label>
      <input type="text" value="<%= @book.genre %>" class="form-control" name="genre" id="exampleInput" placeholder="Enter Genre">
    </div>
    
    <button type="submit" class="btn btn-success">Edit</button>
  </form>
</div>
