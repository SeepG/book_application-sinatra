<div class="container">
  <h2>Add Book</h2>
  <form method="POST" action="/books">
    <div class="form-group">
      <label for="exampleInput">Title</label>
      <input type="text" name="title" class="form-control" id="exampleInputName" placeholder="Enter Name">
      <small id="nameHelp" class="form-text text-muted">We will sell your data.</small>
    </div>
    <div class="form-group">
      <label for="exampleInput">Author</label>
      <input type="text" class="form-control" name="author" id="exampleInput" placeholder="Enter Author">
    </div>
     <div class="form-group">
      <label for="exampleInput">Genre</label>
      <input type="text" class="form-control" name="genre" id="exampleInput" placeholder="Enter Genre">
    </div>
    <button type="submit" class="btn btn-success">Create</button>
  </form>
</div>
